@model IList<Animal>
@{
    ViewData["Title"] = "Listar";
}

    <mensagem texto="@TempData["msg"]"></mensagem>
<h1>Listar</h1>

<table class="table">
    <tr>

        <th>CODIGO</th>
        <th>NOME</th>
        <th>CARNIVORO</th>
        <th>TIPO ANIMAL</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AnimalId</td>
            <td>@item.Nome</td>
            <td>@item.Carnivoro</td>
            <td>@item.Tipo</td>
            <td>
                <a asp-action="Atualizar" asp-controller="Animal" asp-route-id="@item.AnimalId" class="btn btn-primary">Atualizar</a>
                @*Onclick referencia a id passada no modal*@
                <a asp-action="Remover" onclick="churros.value = @item.AnimalId" asp-controller="Animal" class="btn btn-danger" asp-route-id="@item.AnimalId" data-toggle="modal" data-target="#modalExemplo">Remover</a>
            </td>
        </tr>
    }
</table>

<div class="modal fade" id="modalExemplo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Confirmar exclusao </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            Deseja realmente excluir ??
        </div>
        <div class="modal-footer">
            <form asp-action="remover">
                @*ID para ser referenciado no botao remover *@
                <input type="hidden" name="id" id="churros" />

                <button type="button" class="btn btn-secondary" data-dismiss="modal">Nao</button>
                @*Para realizar o delete e preciso usar-lo como type=submit *@
                <button type="submit" class="btn btn-primary">Sim</button>
            </form>
        </div>
    </div>
</div>
</div>