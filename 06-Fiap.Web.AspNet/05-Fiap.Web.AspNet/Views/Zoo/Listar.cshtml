@model  IList<Zoo>

@{
    ViewData["Title"] = "Listar";
}

<h2>Listar</h2>

<mensagem texto="@TempData["msg"]"></mensagem>

<table class="table">
    <tr>
        <th>Nome</th>
        <th>Jaulas</th>
        <th>Tipo</th>
        <th>Data Abertura</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nome</td>
            <td>@item.Jaulas</td>
            <td>@item.EntidadeAdministradora</td>
            <td>@item.DataAbertura.ToShortDateString()</td>
            <td>
                <a asp-action="atualizar" 
                   asp-route-id="@item.ZooId">Editar</a>
            </td>
        </tr>
    }
</table>

