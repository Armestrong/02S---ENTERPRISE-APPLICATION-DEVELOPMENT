@model IList<Zoo>

@{
    ViewData["Title"] = "Listar";
}

<h1>Listar</h1>
<mensagem texto="@TempData["msg"]"></mensagem>


<table class="table">
    <tr>
        <th>NOME</th>
        <th>JAULAS</th>
        <th>ADMINISTRADORA</th>
        <th>DATA ABERTURA </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nome</td>
            <td>@item.Jaulas</td>
            <td>@item.EntidadeAdministradora</td>
            <td>@item.DataAbertura.ToShortDateString()</td>
            <td>
                <a asp-action="Atualizar" asp-route-id="@item.ZooId" class="btn btn-primary">Editar</a>
                <a asp-action="Remover" onclick="churros.value =@item.ZooId" asp-route-id="@item.ZooId" class="btn btn-danger" data-toggle="modal" data-target="#modalExemplo" >Remover</a>

            </td>

        </tr>
    }
</table>

<!-- Botão para acionar modal -->


<!-- Modal -->
<div class="modal fade" id="modalExemplo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirmar exclusao </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Deseja realmente excluir ?? 
            </div>
            <div class="modal-footer">
                <form asp-action="remover">
                    <input type="hidden" name="id" id="churros" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Nao</button>
                    <button type="submit" class="btn btn-primary" >Sim</button>
                </form>
            </div>
        </div>
    </div>
</div>