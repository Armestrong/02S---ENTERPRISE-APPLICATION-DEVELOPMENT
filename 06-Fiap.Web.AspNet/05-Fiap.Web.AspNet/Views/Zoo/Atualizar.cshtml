@model Zoo
@{
    ViewData["Title"] = "Atualizar";
}

<h1>Atualizar</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <input asp-for="ZooId" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ZooId" class="control-label"></label>
                <input asp-for="ZooId" class="form-control" />
                <span asp-validation-for="ZooId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Jaulas" class="control-label"></label>
                <input asp-for="Jaulas" class="form-control" />
                <span asp-validation-for="Jaulas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataAbertura" class="control-label"></label>
                <input asp-for="DataAbertura" class="form-control" />
                <span asp-validation-for="DataAbertura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EntidadeAdministradora"></label>
                <select asp-for="EntidadeAdministradora" class="form-control"
                        asp-items="@Html.GetEnumSelectList<Tipo>()">
                    <option>Selecione</option>
                </select>
            </div>
            <botao texto="Atualizar" />
        </form>
    </div>
</div>